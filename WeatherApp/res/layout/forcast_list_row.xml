<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_width="fill_parent">

    <TableRow android:layout_width="fill_parent"
              android:id="@+id/TableRow01"
              android:layout_height="wrap_content">

        <TextView android:textColor="#000000"
                  android:id="@+id/date_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="date" android:textStyle="bold" 
                  android:gravity="left"
                  android:layout_weight="1" 
                  android:typeface="monospace"
                  android:height="40sp" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
              android:layout_width="fill_parent">

    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_min_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="min" 
                      android:layout_weight="1" 
                      android:height="20sp" />
    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_max_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="max" 
                      android:layout_weight="1" 
                      android:height="20sp" />
    
    </TableRow>
    <TableRow>
    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_morn_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="morn" 
                      android:layout_weight="1" 
                      android:height="20sp" />
    </TableRow>
    <TableRow>
    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_day_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="day" 
                      android:layout_weight="1" 
                      android:height="20sp" />
    </TableRow>
    <TableRow>
    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_eve_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="eve" 
                      android:layout_weight="1" 
                      android:height="20sp" />
    </TableRow>
    <TableRow>
    <TextView android:textColor="#000000" 
                      android:id="@+id/temp_night_view"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="night" 
                      android:layout_weight="1" 
                      android:height="20sp" />
	</TableRow>
    <ImageView android:layout_height="wrap_content"
                      android:layout_width="fill_parent" 
                      android:layout_weight="1"
                      android:textColor="#000000"
                      android:gravity="right"
                      android:id="@+id/image_view"
                      android:height="20sp" />
</TableLayout>