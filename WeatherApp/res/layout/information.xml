<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/main_layout"
    tools:context=".MainActivity" >

     <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:text="Loading..."
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash" />
     
     <TextView
        android:layout_below="@id/city_name"
        android:id="@+id/current_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash" />
     
     <TextView
         android:layout_below="@id/city_name"
        android:layout_toRightOf="@id/current_temp"
        android:id="@+id/current_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash" />
     
     <ImageView android:layout_height="wrap_content"
         android:layout_below="@id/city_name"		
         android:layout_toRightOf="@id/current_description"
        android:layout_width="fill_parent" 
        android:textColor="#000000"
        android:gravity="right"
        android:id="@+id/current_image_view"
        android:height="20sp" />
    
     <ListView
         	android:layout_below="@id/current_temp"
            android:id="@+id/forcast_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    

</RelativeLayout>
